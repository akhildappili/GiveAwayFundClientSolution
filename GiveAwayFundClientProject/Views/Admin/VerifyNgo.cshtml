@model GiveAwayFundClientProject.Models.ViewModels.Verification

@{
    ViewData["Title"] = "VerifyNgo";
}

<h1>VerifyNgo</h1>

<h4>Verification</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="VerifyNgo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VerificationId" class="control-label"></label>
                <input asp-for="VerificationId" class="form-control" readonly="@(true)"/>
                <span asp-validation-for="VerificationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgoId" class="control-label"></label>
                <input asp-for="NgoId" class="form-control" readonly ="readonly"/>
                <span asp-validation-for="NgoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProofOfVerification" class="control-label"></label>
                <input asp-for="ProofOfVerification" class="form-control" readonly ="readonly"
                       />
                @*<img src="@Url.Content(Session["image"].ToString())" onclick="display('middle')" />*@
                <span asp-validation-for="ProofOfVerification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="">please select status</option>                    
                    <option>Accept</option>
                    <option>Reject</option>
                </select>
                @*<input asp-for="Status" class="form-control" />*@
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @ViewBag.result

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

