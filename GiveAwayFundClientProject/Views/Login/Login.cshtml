@model GiveAwayFundClientProject.Models.ViewModels.LoginDetails

@{
    ViewData["Title"] = "Login";
}

<head>
    <link href="~/css/Login.css" rel="stylesheet" />
</head>

<h4>LoginDetails</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <form asp-action="Login"  class="box">
                    <h1>Login</h1>
                    <p class="text-muted"> Please enter your login and password!</p>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @*<label asp-for="UserName" class="control-label"></label>*@
                        <input asp-for="UserName" placeholder="UserName"   class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="Password" class="control-label"></label>*@
                        <input asp-for="Password" placeholder="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>

                    @Html.ActionLink("Register Here as FundRaiser", "Register", "FundRaiser") </br>

                    @Html.ActionLink("Register Here as Donor", "Register", "Donor")

                    @ViewBag.Message
                </form>
            </div>
        </div>
    </div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }




