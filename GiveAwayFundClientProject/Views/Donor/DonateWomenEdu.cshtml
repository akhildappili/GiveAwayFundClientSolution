@model GiveAwayFundClientProject.Models.ViewModels.Donation

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DonateWomenEdu</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/css/AddAmount.css" rel="stylesheet" />

</head>
<body>
    @{Html.RenderPartial("~/Views/Shared/_DonorNavbar.cshtml");}
    <div class="container">
        <div class=" text-center mt-5 ">
            <h1>Donation Form</h1>
        </div>
        <div class="row ">
            <div class="col-lg-7 mx-auto">
                <div class="card mt-2 mx-auto p-4 bg-light">
                    <div class="card-body bg-light">
                        <div class="container">
                            <form asp-action="DonateWomenEdu">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                @*<div class="form-group">
                                        <label asp-for="TransactionId" class="control-label"></label>
                                        <input asp-for="TransactionId" class="form-control" />
                                        <span asp-validation-for="TransactionId" class="text-danger"></span>
                                    </div>*@
                                <div class="form-group">
                                    <label asp-for="DonorId" class="control-label"></label>
                                    <input asp-for="DonorId" class="form-control" readonly />
                                    <span asp-validation-for="DonorId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="NgoId" class="control-label"></label>
                                    @*<input asp-for="NgoId" class="form-control" />*@
                                    <select asp-for="NgoId" class="form-control" asp-items="@ViewBag.specialization"></select>
                                    <span asp-validation-for="NgoId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Amount" class="control-label"></label>
                                    <input asp-for="Amount" class="form-control" />
                                    <span asp-validation-for="Amount" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label"></label>
                                    @*<input asp-for="Description" class="form-control" />*@
                                    <select asp-for="Description" class="form-control">
                                        <option value="">please choose type of donation</option>
                                        <option>women education</option>

                                    </select>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Add" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div> <!-- /.8 -->
            </div> <!-- /.row-->
        </div>
    </div>

    @*<div>
            <a asp-action="Index">Back to List</a>
        </div>*@

</body>
</html>
